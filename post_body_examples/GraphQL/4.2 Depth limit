query GetUserWithDepthLimitById($userId: ID) {
    user(id: $userId) {
        id,
        userSubscribedTo {
            id,
            userSubscribedTo {
                id,
                userSubscribedTo {
                    id,
                    userSubscribedTo {
                        id,
                        userSubscribedTo {
                            id,
                            userSubscribedTo {
                                id
                            }
                        }
                    }
                }
            }
        }
    }
}
